# Export local path
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$HOME/.local/bin:$HOME/github_repos/Random-Scripts:$HOME/.cargo/bin"

# Set editor to neovim
export EDITOR="/usr/bin/nvim"

# Set Config Home
export XDG_CONFIG_HOME="$HOME/.config/Linux"

# Set manpager
export MANPAGER='bat -l man -p --theme="Monokai Extended"'

# Set Browser
export BROWSER="/usr/bin/zen-browser"

# Export Language Settings
export LANG="en_US.UTF-8"
export LANGUAGE="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
